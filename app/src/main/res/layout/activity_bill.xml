<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop Name: Your Shop Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: Your Shop Address"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/shopMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop Mobile: 123-456-7890"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:textSize="18sp"
            android:gravity="center" />

        <!-- Customer Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Details"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/customerMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Mobile"
            android:textSize="18sp"
            android:inputType="phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------------------"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/productHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Products Container -->
        <LinearLayout
            android:id="@+id/productsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- Example of Product Item 1 -->


        <!-- Product Item 2 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------------------"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/subtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtotal: 0.00 INR"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gstAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GST (5%): 0.00 INR"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 0.00 INR"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------------------"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/thankYouMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for shopping with us!"
            android:textSize="18sp"
            android:gravity="center" />

        <!-- Button to print the bill -->
        <Button
            android:id="@+id/btnPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Bill"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
